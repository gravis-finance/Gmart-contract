{
    "name": "offchain-auction",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "deploy": "npx hardhat run scripts/deploy.js --network",
        "upgrade": "npx hardhat run scripts/upgrade.js --network",
        "test": "npx hardhat run scripts/test.js --network",
        "sign": "npx hardhat run scripts/sign.js --network",
        "cancel": "npx hardhat run scripts/cancel.js --network",
