        "hardhat": "2.9.3"
    },
    "devDependencies": {
        "@azure/app-configuration": "1.3.1",
        "@sentry/node": "6.16.1",
        "body-parser": "1.19.0",
        "cors": "2.8.5",
        "express": "4.17.1",
        "express-rate-limit": "6.1.0",
        "helmet": "4.6.0",
        "mongoose": "6.1.1",
        "morgan": "1.10.0",
        "node-fetch": "2.6.7",
        "swagger-autogen": "2.19.0",
